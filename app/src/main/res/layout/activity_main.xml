<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.tj.lotty520.sample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:id="@+id/string_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doGetString"
            android:text="@string/url_get" />

        <Button
            android:id="@+id/string_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doPostString"
            android:text="@string/url_post" />

        <Button
            android:id="@+id/string_path_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doGetPath"
            android:text="@string/path_get" />

        <Button
            android:id="@+id/string_path_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doPostPath"
            android:text="@string/path_post" />

        <Button
            android:id="@+id/param_path_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doGetParamPath"
            android:text="@string/params_path_get" />

        <Button
            android:id="@+id/param_path_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doPostParamPath"
            android:text="@string/params_path_post" />

        <Button
            android:id="@+id/downloader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="download"
            android:text="@string/download" />

        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="upload"
            android:text="@string/upload" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

</ScrollView>
